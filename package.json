{
  "name": "pomodoro-app",
  "productName": "Pomodoro App",
  "version": "1.0.0",
  "description": "App Pomodoro en VueJS + Electron, par Tony De Donato et Marianne Corbel :D",
  "author": "Tony DE DONATO & Marianne CORBEL",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc -b && vite build",
    "build:main": "tsc -p tsconfig.main.json",
    "start:electron": "electron .",
    "dev:electron": "tsc -p tsconfig.main.json && electron dist-electron/electron/main.js",
    "dist": "npm run build && npm run build:main && electron-builder"
  },
  "main": "dist-electron/electron/main.js",
  "dependencies": {
    "better-sqlite3": "^11.10.0",
    "reflect-metadata": "^0.2.2",
    "sqlite3": "^5.1.7",
    "typeorm": "^0.3.25",
    "vue": "^3.5.13",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.2.3",
    "@vue/tsconfig": "^0.7.0",
    "electron": "^36.3.2",
    "electron-builder": "^26.0.12",
    "typescript": "~5.8.3",
    "vite": "^6.3.5",
    "vue-tsc": "^2.2.8"
  },
  "build": {
    "appId": "com.example.pomodoroapp",
    "productName": "Pomodoro App",
    "files": [
      "dist/**",
      "dist-electron/**"
    ],
    "win": {
      "target": "nsis"
    }
  }
}
